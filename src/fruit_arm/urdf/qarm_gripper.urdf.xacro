<?xml version="1.0" encoding="utf-8"?>
<robot name="Gripper" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Helper macros defined at the top level -->
  <xacro:macro name="gripper_joint_control" params="prefix finger_name">
    <joint name="${prefix}${finger_name}_joint_1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}${finger_name}_joint_2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}${finger_name}_joint_3">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="gripper_transmission" params="prefix finger_name">
    <transmission name="${prefix}${finger_name}_joint_1_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}${finger_name}_joint_1">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}${finger_name}_joint_1_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    <transmission name="${prefix}${finger_name}_joint_2_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}${finger_name}_joint_2">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}${finger_name}_joint_2_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    <transmission name="${prefix}${finger_name}_joint_3_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}${finger_name}_joint_3">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}${finger_name}_joint_3_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

  <xacro:macro name="gripper_finger" params="prefix finger_prefix">
    <link name="${prefix}${finger_prefix}_link_0">
      <visual>
        <origin rpy="0 0 0" xyz="0.005 0 0"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_0.stl" scale="0.25 0.25 0.25"/>
        </geometry>
        <material name="gripper_green"/>
      </visual>
      <collision>
        <origin rpy="0 3.1416 -1.57" xyz="-0.011375 0.01035 0.009"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_0.stl" scale="0.25 0.25 0.25"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <link name="${prefix}${finger_prefix}_link_1">
      <visual>
        <origin rpy="0 0 -0.52" xyz="0.0125 -0.007 0"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_1.stl" scale="0.25 0.25 0.25"/>
        </geometry>
        <material name="gripper_green"/>
      </visual>
      <collision>
        <origin rpy="0 0 -0.52" xyz="0.0125 -0.007 0"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_1.stl" scale="0.25 0.25 0.25"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.15"/>
        <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0002"/>
      </inertial>
    </link>

    <link name="${prefix}${finger_prefix}_link_2">
      <visual>
        <origin rpy="0 0 0" xyz="0.00975 0 0.001875"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_2.stl" scale="0.25 0.25 0.25"/>
        </geometry>
        <material name="gripper_green"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.00975 0 0.001875"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_2.stl" scale="0.25 0.25 0.25"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.15"/>
        <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0002"/>
      </inertial>
    </link>

    <link name="${prefix}${finger_prefix}_link_3">
      <visual>
        <origin rpy="0 0 0.52" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_3.stl" scale="0.25 0.25 0.25"/>
        </geometry>
        <material name="gripper_green"/>
      </visual>
      <collision>
        <origin rpy="0 0 0.52" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/link_3.stl" scale="0.25 0.25 0.25"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx="0.00005" ixy="0.0" ixz="0.0" iyy="0.00005" iyz="0.0" izz="0.00005"/>
      </inertial>
    </link>

    <joint name="${prefix}${finger_prefix}_joint_1" type="revolute">
      <parent link="${prefix}${finger_prefix}_link_0"/>
      <child link="${prefix}${finger_prefix}_link_1"/>
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 0" xyz="0.005 0 0"/>
      <limit effort="100" lower="0" upper="3.1416" velocity="100"/>
    </joint>

    <joint name="${prefix}${finger_prefix}_joint_2" type="revolute">
      <parent link="${prefix}${finger_prefix}_link_1"/>
      <child link="${prefix}${finger_prefix}_link_2"/>
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 -0.52" xyz="0.0125 -0.007 0"/>
      <limit effort="100" lower="0" upper="3.1416" velocity="100"/>
    </joint>

    <joint name="${prefix}${finger_prefix}_joint_3" type="revolute">
      <parent link="${prefix}${finger_prefix}_link_2"/>
      <child link="${prefix}${finger_prefix}_link_3"/>
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 0" xyz="0.00975 0 0"/>
      <limit effort="100" lower="0" upper="3.1416" velocity="100"/>
    </joint>
  </xacro:macro>

  <!-- Main gripper macro -->
  <xacro:macro name="gripper" params="prefix:='' parent_link">

    <!-- Create fingers -->
    <xacro:gripper_finger prefix="${prefix}" finger_prefix="gripper_finger_1"/>
    <xacro:gripper_finger prefix="${prefix}" finger_prefix="gripper_finger_2"/>
    <xacro:gripper_finger prefix="${prefix}" finger_prefix="gripper_finger_middle"/>

    <!-- Gripper Palm -->
    <link name="${prefix}gripper_palm">
      <visual>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/palm.stl" scale="0.25 0.25 0.25"/>
        </geometry>
        <material name="gripper_green"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://fruit_arm/meshes/gripper/palm.stl" scale="0.25 0.25 0.25"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="1.3"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Finger joints to palm -->
    <joint name="${prefix}gripper_palm_finger_1_joint" type="revolute">
      <parent link="${prefix}gripper_palm"/>
      <child link="${prefix}gripper_finger_1_link_0"/>
      <axis xyz="0 1 0"/>
      <origin rpy="0 3.1416 -1.57" xyz="-0.011375 0.00535 0.009"/>
      <limit effort="100" lower="-0.16" upper="0.25" velocity="100"/>
    </joint>

    <joint name="${prefix}gripper_palm_finger_2_joint" type="revolute">
      <parent link="${prefix}gripper_palm"/>
      <child link="${prefix}gripper_finger_2_link_0"/>
      <axis xyz="0 1 0"/>
      <origin rpy="0 3.1416 -1.57" xyz="-0.011375 0.00535 -0.009"/>
      <limit effort="100" lower="-0.25" upper="0.16" velocity="100"/>
    </joint>

    <joint name="${prefix}gripper_palm_finger_middle_joint" type="fixed">
      <parent link="${prefix}gripper_palm"/>
      <child link="${prefix}gripper_finger_middle_link_0"/>
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 1.57" xyz="0.011375 0.00535 0"/>
    </joint>

    <!-- Connection to parent (robot end effector) -->
    <joint name="${prefix}end_effector_to_gripper_palm" type="fixed">
      <parent link="${parent_link}"/>
      <child link="${prefix}gripper_palm"/>
      <origin xyz="0 0 0.02" rpy="1.57079632679 0 1.57079632679"/>
    </joint>

    <!--Gripper Control Block-->
    <ros2_control name="${prefix}Gripper_System" type="system">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>
      <joint name="${prefix}gripper_palm_finger_1_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="${prefix}gripper_palm_finger_2_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <xacro:gripper_joint_control prefix="${prefix}" finger_name="gripper_finger_1"/>
      <xacro:gripper_joint_control prefix="${prefix}" finger_name="gripper_finger_2"/>
      <xacro:gripper_joint_control prefix="${prefix}" finger_name="gripper_finger_middle"/>
    </ros2_control>

    <!--Gripper Transmission Block-->
    <!-- Palm finger joints transmissions -->
    <transmission name="${prefix}gripper_palm_finger_1_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}gripper_palm_finger_1_joint">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}gripper_palm_finger_1_joint_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    <transmission name="${prefix}gripper_palm_finger_2_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}gripper_palm_finger_2_joint">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}gripper_palm_finger_2_joint_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <xacro:gripper_transmission prefix="${prefix}" finger_name="gripper_finger_1"/>
    <xacro:gripper_transmission prefix="${prefix}" finger_name="gripper_finger_2"/>
    <xacro:gripper_transmission prefix="${prefix}" finger_name="gripper_finger_middle"/>

  </xacro:macro>

  <!-- Material Definitions -->
  <material name="gripper_green">
    <color rgba="0 1 0 1"/>
  </material>

</robot>